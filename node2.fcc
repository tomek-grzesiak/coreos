variant: fcos
version: 1.2.0
passwd:
  users:
    - name: core
      ssh_authorized_keys:
        - ssh-rsa  tomek@rhel
storage:
  files:
    - path: /etc/hostname
      mode: 0644
      contents:
        inline: node2
    - path: /etc/hosts
      mode: 0644
      contents:
        inline: | 
          192.168.122.20 node1
          192.168.122.21 node2
          192.168.122.22 node3
    - path: /etc/NetworkManager/system-connections/eth0.nmconnection
      mode: 0600
      contents:
        inline: |
          [connection]
          id=eth0
          type=ethernet
          interface-name=eth0
          [ipv4]
          address1=192.168.122.21/255.255.255.0,192.168.122.1
          dhcp-hostname=node2
          dns=192.168.122.1
          dns-search=
          may-fail=false
          method=manual
